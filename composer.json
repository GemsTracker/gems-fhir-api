{
  "name": "gemstracker/gems-fhir-api",
  "description": "FHIR API for GemsTracker",
  "type": "library",
  "autoload": {
    "psr-4": {
      "Gems\\Api\\Fhir\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GemsFhirApiTest\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.1",
    "gemstracker/gemstracker": "^2.0.26|2.x-dev",
    "gemstracker/gems-api": "^1.0.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "phpstan/phpstan": "^2.1",
    "vimeo/psalm": "^5.8"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/jvangestel/phinx.git"
    },
    {
      "type": "git",
      "url": "https://github.com/gemstracker/gems-api.git"
    },
    {
      "type": "git",
      "url": "https://github.com/gemstracker/gems-oauth2.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-html.git"
    },
    {
      "type": "git",
      "url": "https://github.com/magnafacta/zalt-laminas-filter.git"
    },
    {
      "type": "git",
      "url": "https://github.com/magnafacta/zalt-laminas-validator.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-late.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-loader.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-model.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-util.git"
    }
  ],
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  },
  "scripts": {
    "stan": [
      "vendor/bin/phpstan --memory-limit=512M"
    ],
    "test": [
      "vendor/bin/phpunit"
    ]
  }
}
